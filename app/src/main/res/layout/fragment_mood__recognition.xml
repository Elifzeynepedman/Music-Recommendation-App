<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mood_Recognition"
    android:background="#1F2833"
    >


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/happy" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="167dp"
        android:layout_height="180dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/sad_bear" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="182dp"
        android:layout_height="168dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="370dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/angry_bear" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="166dp"
        android:layout_height="166dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="370dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/neutral_bear" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="305dp"
        android:text="Happy"
        android:textStyle="bold"
        android:textColor="#FFFF"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="540dp"
        android:text="Angry"
        android:textStyle="bold"
        android:textColor="#FFFF"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="540dp"
        android:text="Neutral"
        android:textStyle="bold"
        android:textColor="#FFFF"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="295dp"
        android:layout_marginTop="305dp"
        android:text="Sad"
        android:textColor="#FFFF"

        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:text="Face Detection Failed"
        android:textColor="#FFFF"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="77dp"
        android:text="Please Select Your Mood"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        />

</FrameLayout>